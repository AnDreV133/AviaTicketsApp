<resources>

    <style name="Widget.Theme.MyApplication.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <!-- BottomSheetDialog Style -->
    <style name="CustomBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Text Style -->
    <!-- Base -->
    <style name="CustomTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">text</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/grey_6</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Derived  -->
    <style name="CustomEditText.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomTextView.Bold">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
    </style>

    <style name="CustomTextView.Bold.Title">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="CustomTextView.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomTextView.Bold.Body1">
        <item name="android:textSize">16sp</item>
    </style>

</resources>