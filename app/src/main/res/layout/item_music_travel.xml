<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="132dp"
    android:layout_height="213dp"
    android:layout_marginEnd="67dp"
    android:background="@color/black"
    android:gravity="start"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/music_travel_image"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:layout_weight="1"
        android:background="@drawable/shape_image_16dp"
        android:contentDescription="image music travel"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/music_travel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/sf_pro_display_bold"
        android:text="title"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/music_travel_town"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/sf_pro_display_regular"
        android:text="town"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_plane_decoration"
            app:tint="@color/grey_6" />

        <TextView
            android:id="@+id/music_travel_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_display_regular"
            android:gravity="center_vertical"
            android:text="price"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>